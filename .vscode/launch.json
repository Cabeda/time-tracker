    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run main file scheduler",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/time_tracker/main.py",
            "console": "integratedTerminal",
            "args" : ["--workDuration", "1", "--breakDuration","1"]
        },
        {
            "name": "Python: Run main file log",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/time_tracker/main.py",
            "console": "integratedTerminal",
            "args" : ["log"]
        },
    ]
}